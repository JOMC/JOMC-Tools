<project name="resource-file-processor-task-test" xmlns:jomctest="antlib:org.jomc.ant.test">

  <!-- ************************************************************************************************************* -->
  <target name="test-execute-task">
    <jomctest:test-resource-file-processor-task/>
  </target>

  <!-- ************************************************************************************************************* -->
  <target name="test-execute-task-if">
    <jomctest:test-resource-file-processor-task if="on"/>
