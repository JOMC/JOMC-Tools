  </target>

  <!-- ************************************************************************************************************* -->
  <target name="test-invalid-multiple-locale-elements">
    <jomctest:test-resource-file-processor-task>
      <jomctest:locale language="de" country="de" variant="ISO8859_1"/>
      <jomctest:locale language="de" country="de" variant="ISO8859_1"/>
    </jomctest:test-resource-file-processor-task>
  </target>

