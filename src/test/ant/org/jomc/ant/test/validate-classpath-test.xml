<project name="validate-classpath-test" xmlns:jomc="antlib:org.jomc.ant">

  <!-- ************************************************************************************************************* -->
  <target name="before-test">
    <property name="empty.dir" location="${test.output.dir}/EMPTY"/>
    <property name="no.dir" location="${test.output.dir}/DOES_NOT_EXIST"/>
    <property name="classes.dir" location="${test.output.dir}/classfiles"/>
    <property name="dependencies.dir" location="${test.output.dir}/dependencies"/>

    <delete dir="${no.dir}"/>
    <delete dir="${classes.dir}"/>
    <mkdir dir="${empty.dir}"/>
    <mkdir dir="${classes.dir}"/>
    <mkdir dir="${dependencies.dir}"/>
    <mkdir dir="${test.output.dir}"/>

    <unzip src="${output.dir}/classfiles.zip" dest="${classes.dir}"/>
    <unzip src="${output.dir}/dependencies.zip" dest="${dependencies.dir}"/>

    <path id="empty.classpath">
      <pathelement path="${empty.dir}"/>
    </path>

    <path id="classes.classpath">
      <pathelement location="${classes.dir}"/>
    </path>

    <path id="redundant.classpath">
      <pathelement location="${classes.dir}"/>
      <fileset dir="${dependencies.dir}">
        <include name="**/*.jar"/>
      </fileset>
    </path>
  </target>

  <!-- ************************************************************************************************************* -->
  <target name="test-class-processing-disabled">
    <jomc:validate-classpath classProcessingEnabled="false"/>
  </target>

  <!-- ************************************************************************************************************* -->
  <target name="test-specification-not-found">
    <jomc:validate-classpath specification="DOES NOT EXIST"/>
  </target>

  <!-- ************************************************************************************************************* -->
  <target name="test-implementation-not-found">
    <jomc:validate-classpath implementation="DOES NOT EXIST"/>
  </target>

  <!-- ************************************************************************************************************* -->
  <target name="test-module-not-found">
    <jomc:validate-classpath module="DOES NOT EXIST"/>
  </target>

  <!-- ************************************************************************************************************* -->
  <target name="test-validate-ant-tasks">
    <jomc:commit-classes classesDirectory="${classes.dir}"/>
    <jomc:validate-classpath classpathref="classes.classpath"/>
  </target>

  <!-- ************************************************************************************************************* -->
  <target name="test-validate-ant-tasks-with-redundant-resources">
    <jomc:commit-classes classesDirectory="${classes.dir}" classpathref="redundant.classpath"/>
    <jomc:validate-classpath classpathref="redundant.classpath"/>
  </target>

  <!-- ************************************************************************************************************* -->
  <target name="test-validate-illegal-ant-tasks">
    <jomc:commit-classes classesDirectory="${classes.dir}"/>
    <jomc:validate-classpath classpathref="classes.classpath"
                             transformerLocation="org/jomc/ant/test/validation-test.xsl"/>
  </target>

  <!-- ************************************************************************************************************* -->
  <target name="test-validate-one-specification">
    <jomc:commit-classes classesDirectory="${classes.dir}" specification="org.jomc.ant.test.JomcTask"/>
    <jomc:validate-classpath specification="org.jomc.ant.test.JomcTask" classpathref="classes.classpath"/>
  </target>

  <!-- ************************************************************************************************************* -->
  <target name="test-validate-one-illegal-specification">
    <jomc:commit-classes classesDirectory="${classes.dir}" specification="org.jomc.ant.test.JomcTask"/>
    <jomc:validate-classpath specification="org.jomc.ant.test.JomcTask" classpathref="classes.classpath"
                             transformerLocation="org/jomc/ant/test/validation-test.xsl"/>
  </target>

  <!-- ************************************************************************************************************* -->
  <target name="test-validate-one-implementation">
    <jomc:commit-classes classesDirectory="${classes.dir}" implementation="org.jomc.ant.test.JomcToolTask"/>
    <jomc:validate-classpath implementation="org.jomc.ant.test.JomcToolTask" classpathref="classes.classpath"/>
  </target>

  <!-- ************************************************************************************************************* -->
  <target name="test-validate-one-illegal-implementation">
    <jomc:commit-classes classesDirectory="${classes.dir}" implementation="org.jomc.ant.test.JomcToolTask"/>
    <jomc:validate-classpath implementation="org.jomc.ant.test.JomcToolTask" classpathref="classes.classpath"
                             transformerLocation="org/jomc/ant/test/validation-test.xsl"/>
  </target>

  <!-- ************************************************************************************************************* -->
  <target name="test-validate-one-module">
    <jomc:commit-classes classesDirectory="${classes.dir}" module="JOMC Ant Tasks Tests"/>
    <jomc:validate-classpath module="JOMC Ant Tasks Tests" classpathref="classes.classpath"/>
  </target>

  <!-- ************************************************************************************************************* -->
  <target name="test-validate-one-illegal-module">
    <jomc:commit-classes classesDirectory="${classes.dir}" module="JOMC Ant Tasks Tests"/>
    <jomc:validate-classpath module="JOMC Ant Tasks Tests" classpathref="classes.classpath"
                             transformerLocation="org/jomc/ant/test/validation-test.xsl"/>
  </target>

  <!-- ************************************************************************************************************* -->
  <target name="test-validate-ant-tasks-with-classpathref">
    <jomc:commit-classes classesDirectory="${classes.dir}"/>
    <jomc:validate-classpath classpathref="classes.classpath"/>
  </target>

  <!-- ************************************************************************************************************* -->
  <target name="test-validate-ant-tasks-with-nested-classpath">
    <jomc:commit-classes classesDirectory="${classes.dir}"/>
    <jomc:validate-classpath>
      <jomc:classpath>
        <pathelement location="${classes.dir}"/>
      </jomc:classpath>
    </jomc:validate-classpath>
  </target>

  <!-- ************************************************************************************************************* -->
  <target name="test-validate-ant-tasks-all-attributes">
    <jomc:commit-classes classesDirectory="${classes.dir}"
                         defaultTemplateProfile="TEST"
                         inputEncoding="UTF-8"
                         outputEncoding="UTF-8"
                         templateEncoding="UTF-8"
                         templateProfile="TEST"
                         indentation="\t"
                         lineSeparator="\r\n"
                         modelProcessingEnabled="false"
                         modelObjectClasspathResolutionEnabled="false"
                         moduleLocation="TEST"
                         transformerLocation="TEST"
                         specification="TEST"
                         implementation="TEST"
                         module="TEST"
                         model="TEST"
                         modletLocation="TEST"
                         providerLocation="TEST"
                         platformProviderLocation="TEST">
      <jomc:classpath>
        <pathelement path="${empty.dir}"/>
      </jomc:classpath>
    </jomc:commit-classes>
    <jomc:validate-classpath defaultTemplateProfile="TEST"
                             inputEncoding="UTF-8"
                             outputEncoding="UTF-8"
                             templateEncoding="UTF-8"
                             templateProfile="TEST"
                             indentation="\t"
                             lineSeparator="\r\n"
                             modelProcessingEnabled="false"
                             modelObjectClasspathResolutionEnabled="false"
                             moduleLocation="TEST"
                             transformerLocation="TEST"
                             specification="TEST"
                             implementation="TEST"
                             module="TEST"
                             model="TEST"
                             modletLocation="TEST"
                             providerLocation="TEST"
                             platformProviderLocation="TEST">
      <jomc:classpath>
        <pathelement location="${classes.dir}"/>
      </jomc:classpath>
    </jomc:validate-classpath>
  </target>

  <!-- ************************************************************************************************************* -->
  <target name="test-validate-ant-tasks-broken-model">
    <jomc:validate-classpath moduleLocation="META-INF/jomc-broken.xml"/>
  </target>

  <!-- ************************************************************************************************************* -->
  <target name="test-execute-task">
    <jomc:commit-classes classesDirectory="${classes.dir}"/>
    <jomc:validate-classpath classpathref="classes.classpath"/>
  </target>

</project>
